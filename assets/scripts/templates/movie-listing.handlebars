      <td data-id="{{movie.id}}"><button id="delete-movie" type="button" class="btn btn-danger btn-sm">Delete Movie</button></td>
      <td data-id="{{movie.id}}"><button id="update-rating" type="button" class="btn btn-warning btn-sm">Update Rating</button></td>
    </tr>
  </tbody>
  </table>
  </div>

