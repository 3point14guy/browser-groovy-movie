{{#each movies as |movie|}}

  <!-- {{> partial}} -->
  <!--Don't uncomment yet -->
  <div>
    <table class="table table-bordered table-responsive table-hover">
  <thead>
    <tr>
      <th class="col-md-4">Name</th>
      <th class="col-md-1">Year</th>
      <th class="col-md-1">Rating</th>
      <th class="col-md-1"></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{movie.name}}</td>
